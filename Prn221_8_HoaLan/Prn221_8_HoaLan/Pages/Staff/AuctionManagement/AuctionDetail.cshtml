@page "{AuctionId:int}"
@using DataAccessLayer.Model
@model Prn221_8_HoaLan.Pages.Staff.AuctionManagement.AuctionDetailModel
@{
    Layout = "_Layout";
}

@{
    var fullName = "";
    var session = HttpContext.Session;
    User user = Prn221_8_HoaLan.SessionExtensions.Get<User>(session, "User");
    if (user != null)
    {
        fullName = user.FirstName + " " + user.LastName;
        ViewBag.Role = user.Role;
    }
}
<div class="auction-detail-container" style="max-height: 80vh; overflow-y: auto;">
<div class="container d-flex justify-content-center align-items-center vh-100 mt-5">
    <div class="border p-4 col-md-8 mx-auto">
        <h1 class="text-center mb-4">Auction Information</h1>

            <img src="@Model.Product.Image" style="width: 450px; height: 300px;"  class="img-fluid mx-auto d-block" alt="Auction Image">
        

        <div class="mb-3">
            <label for="auctionId" class="form-label">Auction ID</label>
            <div class="form-control" id="auctionId" name="auctionId">@Model.Auction.AuctionId</div>
        </div>

        <div class="mb-3">
            <label for="auctionName" class="form-label">Auction Name</label>
            <div class="form-control" id="auctionName" name="auctionName">@Model.Auction.AuctionName</div>
        </div>

        <div class="mb-3">
            <label for="productName" class="form-label">Product Name</label>
            <div class="form-control" id="productName" name="productName">@Model.Product.ProductName</div>
        </div>

        <div class="mb-3">
            <label for="productDesc" class="form-label">Product Description</label>
            <div class="form-control" id="productDesc" name="productDesc">@Model.Product.Description</div>
        </div>

        <div class="mb-3">
            <label for="status" class="form-label">Status</label>
            <div class="form-control" id="status" name="status">@Model.Auction.Status</div>
        </div>

        <div class="mb-3">
            <label for="createBy" class="form-label">Created By</label>
            <div class="form-control" id="createBy" name="createBy">@Model.Auction.CreateBy</div>
        </div>
        <div class="mb-3 text-center">
            <a class="btn btn-secondary" asp-page="/Staff/AuctionManagement/index">Close</a>
        </div>
    </div>
</div>
</div>