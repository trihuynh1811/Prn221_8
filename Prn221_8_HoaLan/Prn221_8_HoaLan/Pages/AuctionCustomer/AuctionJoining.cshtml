                    <li class="list-group-item">UserName: BidAmount</li>
                    <li class="list-group-item">UserName: BidAmount</li>
                </ul>

                <!-- Bid Form -->
                <div class="input-group mt-3">
                    <input type="number" class="form-control" placeholder="Enter bid amount" step="0.01" id="bidAmount">
                    <div class="input-group-append">
                        <button class="btn btn-primary" type="button" onclick="placeBid()">Place Bid</button>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script>
        function placeBid() {
