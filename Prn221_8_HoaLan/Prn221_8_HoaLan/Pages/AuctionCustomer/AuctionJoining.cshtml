                <p><strong>Start Price:</strong> StartPrice</p>
                <p><strong>Price Step:</strong> PriceStep</p>
                <p><strong>Current Price:</strong> CurrentPrice</p>

                <!-- Bid History -->
                <h4>Bid History</h4>
                <ul class="list-group bid-list">
                    <li class="list-group-item">UserName: BidAmount</li>
                    <li class="list-group-item">UserName: BidAmount</li>
                    <li class="list-group-item">UserName: BidAmount</li>
                    <li class="list-group-item">UserName: BidAmount</li>
