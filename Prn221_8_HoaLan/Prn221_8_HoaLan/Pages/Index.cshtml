@page
@model IndexModel
@using DataAccessLayer.Model;
@using Newtonsoft.Json;
@{
    ViewData["Title"] = "Home page";
}
@{
    Layout = "_Layout";
}

<div class="">
    <div class="text-bg p-0">
        <h1 class="p-0"> <span class="blu">Welcome <br></span>To Hoa Lan Đột Biến Shop</h1>
    </div>
</div>

<style>
    img {
        width: 430px;
        height: 400px;
    }
</style>

<div class="glasses">
    <h2 class="font-weight-bold text-center">Our Hoa</h2>
    <div class="container-fluid">
        <div class="row">
            @if (Model.Products.Count > 8)
            {
                @for (int i = 0; i <= 7; i++)
                {
                    <div class="col-xl-3 col-lg-3 col-md-6 col-sm-6" role="button">
                        <a asp-page="./Products/ProductDetail" asp-route-id="@Model.Products[i].ProductId">
                            <div class="glasses_box">
                                <figure class="d-flex justify-content-center align-items-center"><img src="@Model.Products[i].Image" alt="#" /></figure>
                                <h3>@Model.Products[i].Price.ToString("N0") <span class="blu">VND</span></h3>
                                <p>@Model.Products[i].ProductName</p>
                            </div>
                        </a>
                    </div>
                }
            }
            else
            {
                @for (int i = 0; i < Model.Products.Count; i++)
                {
                    <div class="col-xl-3 col-lg-3 col-md-6 col-sm-6" role="button">
                        <a asp-page="./Products/ProductDetail" asp-route-id="@Model.Products[i].ProductId">
                            <div class="glasses_box">
                                <figure class="d-flex justify-content-center align-items-center"><img src="@Model.Products[i].Image" alt="#" /></figure>
                                <h3>@Model.Products[i].Price.ToString("N0") <span class="blu">VND</span></h3>
                                <p>@Model.Products[i].ProductName</p>
                            </div>
                        </a>
                    </div>
                }
            }
        </div>
        <div class="col-md-12 d-flex flex-column justify-content-center">
            <div>
                <a class="read_more my-0" href="/Products/ProductDisplay">More</a>
            </div>
        </div>
    </div>
</div>
