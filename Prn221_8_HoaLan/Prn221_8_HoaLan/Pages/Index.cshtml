@page
@model IndexModel
@using DataAccessLayer.Model;
@using Newtonsoft.Json;
@{
    ViewData["Title"] = "Home page";
}
@{
    Layout = "_Layout";
}
@{
    var fullName = "";
    var session = HttpContext.Session;
    User user = Prn221_8_HoaLan.SessionExtensions.Get<User>(session, "User");
    if (user != null)
    {
        fullName = user.FirstName + " " + user.LastName;
        ViewBag.Role = user.Role;
    }
}

<div class="">
    <div class="text-bg p-0">
        <h1 class="p-0"> <span class="blu">Welcome <br></span>To Hoa Lan Đột Biến Shop</h1>
    </div>
</div>

<style>
    img {
        width: 430px;
        height: 400px;
    }
</style>

<div class="glasses">
    <h2 class="font-weight-bold text-center">Our Hoa</h2>
    <div class="container-fluid">
        <div class="row">
            @for (int i = 0; i<= 7; i++)
            {
                <div class="col-xl-3 col-lg-3 col-md-6 col-sm-6">
                    <div class="glasses_box">
                        <figure class="d-flex justify-content-center align-items-center"><img src="@Model.Products[i].Image" alt="#" /></figure>
                        <h3>@Model.Products[i].Price.ToString("N0") <span class="blu">VND</span></h3>
                        <p>@Model.Products[i].ProductName</p>
                    </div>
                </div>
            }
        </div>
    </div>
</div>
