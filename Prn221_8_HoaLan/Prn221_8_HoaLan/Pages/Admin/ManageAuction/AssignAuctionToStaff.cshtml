@model Prn221_8_HoaLan.Pages.Admin.ManageAuction.AssignAuctionToStaff
@{
}

@using DataAccessLayer.Model;
@{
    Layout = "_LayoutAdmin";
}

<div class="container">
    <h2>Auction Management</h2>
    <table class="table">
        <thead>
            <tr>
                <th>ID</th>
                <th>Name</th>
                <th>Price</th>
                <th>Quantity</th>
                <th>Image</th>
                <th>Status</th>
                <th>Assign to Staff</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>
            <form method="post">
                @foreach (var auction in Model.Auctions)
                {
                <tr>
                    <td>@auction.AuctionName</td>
                    <td>@auction.StartPrice </td>
                    <td>@auction.Status</td>
                    <td>ABC</td>
                    <td>
                        <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#productImageModal">
                            View Image
                        </button>
                    </td>
                    <td>@auction.Status</td>
                    <td>
                         <div class="form-group">
                            <select class="form-control" name="SelectedStaffId">
                                    @foreach (var staff in Model.Staffs)
                                    {
                                    <option value="@staff.UserId">@staff.LastName @staff.FirstName</option>
                                    }
                            </select>
                        </div> 
                    </td>
                    <td>
                        <button type="submit" class="btn btn-primary" name="button" value="Reject">Assign</button>
                    </td>
                </tr>
                }
            </form>
        </tbody>
    </table>
</div>


