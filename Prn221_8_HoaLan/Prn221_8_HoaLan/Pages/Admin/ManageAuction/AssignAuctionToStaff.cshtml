@model Prn221_8_HoaLan.Pages.Admin.ManageAuction.AssignAuctionToStaff
@{
}

@using DataAccessLayer.Model;
@{
    Layout = "_LayoutAdmin";
}
@{
    var fullName = "";
    var session = HttpContext.Session;
    User user = Prn221_8_HoaLan.SessionExtensions.Get<User>(session, "User");
    if (user != null)
    {
        fullName = user.FirstName + " " + user.LastName;
        ViewBag.Role = user.Role;
    }
}
<div class="container">
    <h2>Auction Management</h2>
    <table class="table">
        <thead>
            <tr>
                <th>ID</th>
                <th>Auction Name</th>
                <th>CreateBy</th>
                <th>Status</th>
                <th class="text-center">Detail</th>
                <th class="text-center">Staff Name</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>
            <form method="post">
                @foreach (var auction in Model.Auctions)
                {
                <tr>
                    <td>@auction.AuctionId</td>
                    <td>@auction.AuctionName </td>
                    <td>@auction.CreateBy</td>
                    <td>@auction.Status</td>
                    <td class="text-center">
                        <a class="btn btn-primary" asp-page="./AuctionDetail" asp-route-AuctionId="@auction.AuctionId">
                            View Detail
                        </a>
                    </td>
                    <td>
                        <div class="form-group">
                            <select class="form-control" name="SelectedStaffId">
                                    @foreach (var staff in Model.Staffs)
                                    {
                                    <option value="@staff.UserId">@staff.LastName @staff.FirstName</option>
                                    }
                            </select>
                        </div>
                    </td>
                    <td>
                        <input type="hidden" name="AuctionId" value="@auction.AuctionId" />
                        <button type="submit" class="btn btn-primary" name="button" value="AssignToStaff">Assign</button>
                    </td>
                </tr>
                }
            </form>
        </tbody>
    </table>
</div>


