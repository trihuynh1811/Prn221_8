@page
@using DataAccessLayer.Model;
@model Prn221_8_HoaLan.Pages.Admin.UserInformationManager.DetailModel
@{
Layout = "_LayoutAdmin";
}
@section Styles {
<link rel="stylesheet" href="~/Prn221_8_HoaLan.styles.css" asp-append-version="true" />
}

<head>

</head>
<form class="form-horizontal mb-5" method="post">
  <div class="input-group mb-3 mt-5">
    <select asp-for="RoleValue" class="form-control">
      <option value="0">All</option>
      <option value="4">Customer</option>
      <option value="3">Product Owner</option>
      <option value="2">Staff</option>
      <option value="1">Admin</option>
    </select>
    <input type="text" class="form-control" placeholder="Search User" asp-for="SearchValue">
    <button class="btn btn-primary" type="submit">Search</button>
  </div>
</form>

<div class="table-responsive">
  <table class="table table-hover">
    <thead class="thead-light">
      <tr>
        <th scope="col">User ID</th>
        <th scope="col">Full Name</th>
        <th scope="col">User Name</th>
        <th scope="col">Role</th>
        <th scope="col">Status</th>
        <th scope="col"></th>
      </tr>
    </thead>
    <tbody>
      @foreach (var item in Model.ListUser)
      {
      <tr>
        <td>@item.UserId</td>
        <td>@item.LastName @item.FirstName</td>
        <td>@item.UserName</td>
        <td>
          @if (@item.Role == 1)
          {
          <p>Admin</p>
          }
          else if (item.Role == 2)
          {
          <p>Staff</p>
          }
          else if (item.Role == 3)
          {
          <p>Product Owner</p>
          }
          else if (item.Role == 4)
          {
          <p>Customer</p>
          }
        </td>
        <td>@item.Status</td>
        <td>
          <div class="btn-group" role="group">
            <a class="btn btn-primary" asp-page="./Edit" asp-route-id="@item.UserId">Edit</a>
            <a class="btn btn-secondary" asp-page="./Details" asp-route-id="@item.UserId">Details</a>
            <a class="btn btn-danger" asp-page="./Delete" asp-route-id="@item.UserId">Delete</a>
          </div>
        </td>
      </tr>
      }
    </tbody>
  </table>
</div>
